            <Label id="playerTypeText" fx:id="playerTypeText" layoutX="325.0" layoutY="648.0" text="You are BK" />
            <Label fx:id="difficultyLevel" layoutX="262.0" layoutY="161.0" text="Please select the difficulty Level" textAlignment="CENTER">
               <font>
                  <Font size="33.0" />
               </font>
            </Label>

                <ChoiceBox id="o" fx:id="choiceDifficulty" layoutX="262.0" layoutY="222.0" onKeyPressed="#clickck" prefHeight="42.0" prefWidth="200.0" value="Beginner">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Advanced" />
                            <String fx:value="Beginner" />
                        </FXCollections>
                    </items>
                </ChoiceBox>
