            <CheckBox fx:id="checkBoxHint" layoutX="22.0" layoutY="193.0" mnemonicParsing="false" onAction="#checkBoxClicked" text="Hint" />
            <Label fx:id="chooseYourColourLabel" layoutX="262.0" layoutY="294.0" text="Choose your colour">
               <font>
                  <Font size="29.0" />
               </font>
            </Label>
            <ChoiceBox fx:id="choiceBoxCoulour" layoutX="262.0" layoutY="350.0" prefWidth="150.0" value="Black">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Black" />
                        <String fx:value="White" />
                    </FXCollections>
                </items>
            </ChoiceBox>

            </children>
        </Pane>
    </children>

</GridPane>
